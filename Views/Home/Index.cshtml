@{
    ViewData["Title"] = "Index";
}
<h1>@ViewBag.Error</h1>


@foreach (Casa casa in ViewBag.Casas)
{
    <div class="card" style="width: 18rem;">
  <img src='@casa.FotoCasa' class="card-img-top" >
  <div class="card-body">
    <h2 class="card-title">@casa.Nombre_casa</h2>
    <h4 class="card-title">@casa.Direccion_casa</h4>
    <h4 class="card-title">@casa.Precio</h4>
    <button onclick = "CambioDeColor(@casa.IDCasa)"><img src = "/Imagenes/cora.png" width="15%" height="auto" id="casa_@casa.IDCasa" ></button>
    <a href='@Url.Action("Casa", new { IdCasa = @casa.IDCasa })' class="btn btn-primary">Alquilar</a>
  </div>
</div>
}


